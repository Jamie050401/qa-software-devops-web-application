@page "/dashboard"
@model DashboardModel

@{
    ViewData["Title"] = "Dashboard";
}

<!--suppress CommaExpressionJS, BadExpressionStatementJS -->
<div class="text-center">
    @if (Model.CurrentUser?.FirstName is null)
    {
        <h1 class="display-4">Welcome!</h1>
    }
    else
    {
        <h1 class="display-4">Welcome @Model.CurrentUser.FirstName!</h1>
    }
</div>

<!-- TODO - Implement area to select product and begin journey -->
<!-- Draw on screen with area inside having the ability to select a bond product (give it a title etc.) -->

<!-- TradingView Widget -->
<div class="tradingview-widget-container">
  <div class="tradingview-widget-container__widget"></div>
  @* ReSharper disable once ScriptTagHasBothSrcAndContentAttributes *@
  <script type="text/javascript" src="https://s3.tradingview.com/external-embedding/embed-widget-mini-symbol-overview.js" async>
    {
      "symbol": "FX:GBPUSD",
      "width": "100%",
      "height": "100%",
      "locale": "en",
      "dateRange": "12M",
      "colorTheme": "light",
      "isTransparent": true,
      "autosize": true,
      "largeChartUrl": ""
    }
  </script>
</div>
